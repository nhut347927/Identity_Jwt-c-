@{
    ViewData["Title"] = "Assign Permissions to Roles";
}

<h1>Assign Permissions to Roles</h1>

<form asp-action="AssignPermissionsToRoles" method="post">
    <div class="form-group">
        <label for="userName" class="control-label">User Name</label>
        <input type="text" id="userName" name="userName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Roles and Permissions</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Role</th>
                    @foreach (var permission in ViewBag.Permissions)
                    {
                        <th>@permission.Name</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var role in ViewBag.Roles)
                {
                    <tr>
                        <td>@role.Name</td>
                        @foreach (var permission in ViewBag.Permissions)
                        {
                            <td>
                                <input class="form-check-input" type="checkbox" name="rolePermissions" value="@role.Name-@permission.Name" />
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
    </div>
</form>